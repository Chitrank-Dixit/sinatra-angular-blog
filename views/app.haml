!!!
%html.no-js{ :lang => "en", :ng => { :app => 'blog' }}
  %head
    %title Blog
    %meta{ :charset => "utf-8" }
    %meta{ :name => "description", :content => @description ||= "" }
    %meta{ :name => "viewport", :content => "width=device-width" }
    %meta{ :name => "fragment", :content => "!" }
    %link{ :rel => "stylesheet", :src => "/css/screen.css" }
    %script{ :src => "//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js" }
    %script window.jQuery || document.write('<script src="js/vendor/jquery-1.9.0.min.js"><\/script>')
    %script{ :src => "//ajax.googleapis.com/ajax/libs/angularjs/1.0.5/angular.min.js" }
    %script window.angular || document.write('<script src="js/vendor/angular-1.0.5.min.js"><\/script>')
    %script{ :src => "//ajax.googleapis.com/ajax/libs/angularjs/1.0.5/angular-resource.min.js" }
    %script window.angular || document.write('<script src="js/vendor/angular-resource-1.0.5.min.js"><\/script>')
    %script{ :src => "/js/vendor/modernizr-2.6.2.min.js" }
    %script{ :src => "/js/plugins.js" }
    %script{ :src => "/js/app.js" }
    %script{ :src => "/js/controllers/BlogCtrl.js" }
    %script{ :src => "/js/controllers/PostsCtrl.js" }
    %script{ :src => "/js/controllers/PostsDetailCtrl.js" }
    %script{ :src => "/js/controllers/PostsFormCtrl.js" }
    %script{ :src => "/js/services/NavSvc.js" }
  %body{ :ng => { :controller => 'BlogCtrl' }}
    %header
      %nav
        %ul
          %li{ :ng => { :repeat => 'link in hLinks', :class => '{active: $route.current.activeNav == link.type}' }}
            %a{ :href => '{{link.uri}}' } {{link.name}}
    %main{ :ng => { :view => true }}
    %footer
      %nav
        %ul
          %li{ :ng => { :repeat => 'link in fLinks' }}
            %a{ :href => '{{link.uri}}' } {{link.name}}
